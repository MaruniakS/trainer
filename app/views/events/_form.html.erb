<%= form_for([current_user, event], html: {class: 'form-inline'}, remote: true) do |f|%>
    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Назва'%>
    </div>
    <div class="form-group">
      <%= f.select(:day, Date::DAYNAMES.zip((0..6).to_a), {}, {class: 'form-control'}) %>
    </div>
    <div class="form-group">
      <%= f.submit 'Зберегти', class: 'form-control btn btn-primary'%>
    </div>
<% end %>