<div class="container">
  <div class="modal-dialog">
  <div class="loginmodal-container">
    <h1>Forgot your password?</h1><br>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <% if flash[:alert] %>
            <p class="alert alert-danger"> <%= devise_error_messages! %></p>
        <% end %>
        <div class="field">
          <%= f.email_field :email, {autofocus: true, placeholder: 'Email ', class: 'text_input'} %>
        </div>

        <div class="actions">
          <%= f.submit 'Send me reset password instructions', {class: 'loginmodal-submit'} %>
        </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
  </div>
</div>
