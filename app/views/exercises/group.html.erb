<section id="exercise-list" class="bg-light-gray">
  <div class="container main-container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading"> <%= @group.name %> </h2>
        <h3 class="section-subheading text-muted"> Вправи на групу м’язів </h3>
      </div>
    </div>
    <div class="row">
      <% @group.exercises.each do |e|%>
          <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 exercise-list-item">
            <a class="exercise-list-link" data-toggle="modal">
              <div class="exercise-list-hover">
                <div class="exercise-list-hover-content">
                  <i class="fa fa-plus fa-3x"></i>
                </div>
              </div>
              <%= image_tag(e.exercise_image, class: 'img-responsive') %>
            </a>
            <div class="exercise-list-caption">
              <h4><%= e.name %></h4>
            </div>
          </div>
      <% end %>

    </div>
  </div>
</section>