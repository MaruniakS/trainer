<div class="container main-container">
    <div class="row">
      <% @muscle_groups.each do |g|%>
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4 ">
          <%= link_to exercises_group_path(g) do %>
              <div class="muscle-group-container">
                <div class="image-wrapper overlay-fade-in">
                  <%= image_tag(g.muscle_group_image.url) %>
                </div>
                <h4 class="muscle-group-name">
                  <%= g.name %>
                </h4>
              </div>
          <% end %>
        </div>
      <% end %>
    </div>
</div>
