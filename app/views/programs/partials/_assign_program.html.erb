<% if user_signed_in? %>
    <% if current_user.has_program?(@program) %>
        <%= link_to 'Редагувати', edit_user_program_path(current_user, @program), class: 'btn btn-lg square-btn'%>
    <% else %>
        <%= link_to 'Додати у вибране', assign_program_path(program: @program), remote: true, class: 'btn btn-lg square-btn' %>
    <% end %>
<% else %>
    <%= link_to 'Увійти', new_user_registration_path, class:'btn btn-lg btn-primary', role: 'button' %>
<% end %>